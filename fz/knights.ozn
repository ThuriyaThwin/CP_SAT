int: n = 6;
set of int: col = 1 .. n;
set of int: row = 1 .. n;
int: nn = n * n;
set of int: sq = 1 .. nn;
array[sq] of set of sq: neighbours = 
  [ { (n * (R - 1)) + C | 
    i in 1 .. 8, R in { R0 + [ - 1, - 2, - 2, - 1, 1, 2, 2, 1 ][i] }, 
    C in { C0 + [ - 2, - 1, 1, 2, 2, 1, - 1, - 2 ][i] } 
    where (R in row) /\ (C in col) } | R0 in row, C0 in col ];
array[sq] of var sq: p;
output [ "p = " ++ (show(p) ++ ";\n") ];
